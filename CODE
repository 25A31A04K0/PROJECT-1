#include <stdio.h>

struct Student {
    int roll;
    char name[30];
    int presentDays;
};

int main() {
    int n, totalDays;
    struct Student s[50];

    printf("Enter total number of students: ");
    scanf("%d", &n);

    printf("Enter total working days: ");
    scanf("%d", &totalDays);

    for (int i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);

        printf("Roll Number: ");
        scanf("%d", &s[i].roll);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Number of days present: ");
        scanf("%d", &s[i].presentDays);
    }

    printf("\n----- Attendance Report -----\n");
    printf("Roll\tName\tPresent\tPercentage\n");

    for (int i = 0; i < n; i++) {
        float percentage = (s[i].presentDays * 100.0) / totalDays;
        printf("%d\t%s\t%d\t%.2f%%\n",
               s[i].roll, s[i].name, s[i].presentDays, percentage);
    }

    return 0;
}
